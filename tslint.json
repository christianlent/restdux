{
    "defaultSeverity": "warning",
    "rules": {
      "indent": [true, "tabs", 2],
      "jsx-no-multiline-js": false,
      "no-bitwise": false,
      "no-console": [true, "log"]
    },
    "jsRules": {
      "no-console": false
    },
    "extends": [
      "tslint-eslint-rules",
      "tslint-eslint-rules-recommended",
      "tslint:latest",
      "tslint-config-prettier"
    ],
    "linterOptions": {
      "exclude": [
        "config/**/*.js",
        "node_modules/**/*.ts",
        "coverage/lcov-report/*.js"
      ]
    }
}